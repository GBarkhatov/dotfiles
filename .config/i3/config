bindsym $mod+d exec --no-startup-id rofi -show run -lines 5 -eh 2 -bw 0 -width 100 -padding 344 -opacity "90" -bg "#333333" -fg "#888888" -font "Droid Sans Regular 20" -hlbg "#555555" -hlfg "#ffffff" -bc "#ffffff"
# There also is the (new) i3-dmenu-desktop which only displays applications
# shipping a .desktop file. It is a wrapper around dmenu, so you need that
# installed.
# bindsym $mod+d exec --no-startup-id i3-dmenu-desktop

# change focus
