# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec "pactl set-sink-volume 0 +10%; pkill -RTMIN+1 i3blocks"
bindsym XF86AudioLowerVolume exec "pactl set-sink-volume 0 -10%; pkill -RTMIN+1 i3blocks"
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound

# Media player controls
